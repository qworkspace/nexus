generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Activity {
  id          String   @id @default(cuid())
  timestamp   DateTime @default(now())
  type        String   // "task", "message", "cron", "file", "search", "spawn"
  action      String   // "completed", "started", "failed", "sent", "created", "edited"
  title       String
  description String?
  metadata    String?  // JSON string for SQLite
  duration    Int?     // Duration in ms
  status      String   @default("success") // "success", "error", "pending"

  // Cost tracking fields
  tokensIn         Int?     // Input tokens
  tokensOut        Int?     // Output tokens  
  tokensCacheRead  Int?     // Cached read tokens
  tokensCacheWrite Int?     // Cached write tokens
  cost             Float?   // Total cost in USD
  model            String?  // Model used (e.g., "claude-opus-4-5")

  @@index([timestamp])
  @@index([type])
  @@index([status])
  @@index([model])
}

model AgentMetrics {
  id            String   @id @default(cuid())
  date          DateTime @default(now())
  agentId       String   @default("main")
  
  // Counts
  totalRuns     Int      @default(0)
  successCount  Int      @default(0)
  errorCount    Int      @default(0)
  
  // Timing
  avgDurationMs Int?
  maxDurationMs Int?
  minDurationMs Int?
  
  // Costs
  totalCost      Float   @default(0)
  totalTokensIn  Int     @default(0)
  totalTokensOut Int     @default(0)
  
  @@unique([date, agentId])
  @@index([agentId])
}

model SearchIndex {
  id        String   @id @default(cuid())
  path      String   @unique
  content   String
  title     String
  category  String   // "memory", "docs", "project", "activity"
  updatedAt DateTime @updatedAt
  
  @@index([category])
}

model Brief {
  id          String    @id
  title       String
  description String?
  problem     String?
  solution    String?
  impact      String?
  source      String?
  sourceRef   String?
  status      String    @default("pending-review")
  priority    String    @default("MED")
  complexity  String?
  front       String?
  tldr        String?
  skipCost    String?
  briefPath   String?
  researchRef String?
  assignee    String?
  approvedBy  String?  @default("PJ")
  submittedBy String?  @default("Q")
  buildCommit String?
  createdAt   DateTime  @default(now())
  approvedAt  DateTime?
  shippedAt   DateTime?
  rejectedAt  DateTime?
  rejectReason    String?
  rejectComment   String?
  rejectedReason  String?  // legacy compat

  // qReview (flattened)
  qReviewedAt             DateTime?
  qComplexity             String?
  qComplexityChanged      Boolean?
  qMissingInfo            String?  // JSON array string
  qPrerequisites          String?  // JSON array string
  qRisk                   String?
  qRecommendation         String?
  qRecommendationReason   String?
  qSummary                String?

  // extra fields not covered above
  metadata    String?  // JSON blob

  updatedAt   DateTime  @updatedAt

  feedbackEntries BuildFeedback[]
  activityEntries PipelineActivity[]

  @@index([status])
  @@index([priority])
  @@index([front])
  @@index([createdAt])
}

model BuildFeedback {
  id            String    @id @default(cuid())
  briefId       String
  brief         Brief     @relation(fields: [briefId], references: [id])
  rating        String?   // nailed-it | acceptable | needs-work
  ratingInt     Int?      // legacy numeric
  tags          String?   // JSON array string
  comment       String?
  screenshot    String?
  ratedAt       DateTime  @default(now())
  ratedBy       String?
  commitMessage String?

  @@index([briefId])
  @@index([rating])
}

model PipelineActivity {
  id        String    @id @default(cuid())
  timestamp DateTime  @default(now())
  type      String
  agent     String?
  agentName String?
  emoji     String?
  message   String
  briefId   String?
  brief     Brief?    @relation(fields: [briefId], references: [id])
  metadata  String?   // JSON blob

  @@index([timestamp])
  @@index([briefId])
}
